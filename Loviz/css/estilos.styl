rojito = #f55c59
linkhover = #717171
aguamarina = #88c7c5
colortexto = #777
plomo_oscu = #444
body
	background url('../images/bg_boxed.jpg') no-repeat fixed top center
	font-family arial
	font-size 16px
	img
		width 100%
	a
		text-decoration none
		color #666666
	.clear
		clear: both;
	.content-wrapper
		background-color #e0e0e0
		.shadow-box
			width 1200px
			box-shadow 0 0 18px rgba(0, 0, 0, 0.2)
			background-color #FFF
			margin 0 auto
	#page
		padding 0
	.separador
		height 3px
		border-bottom 1px dotted #d9d9d9
		border-top 1px dotted #d9d9d9
//blocke Buscador
#block-views-exp-display-products-page
	margin: 10px;
	border: 1px solid #d9d9d9;
	border-radius: 28px;
	.views-exposed-form .views-exposed-widget
		padding 0
		input
			margin 0
	.views-exposed-widgets
		margin 2px 0 0 15px
		.form-text
			border 0
			&:focus
				outline none
		.form-submit
			background none
			border none
			font-size 0px
			&:before
				font-family: 'Glyphicons Halflings';
				content: "\e003";
				font-size 15px
//Blocke carrito
#block-views-shopping-cart-block
	float right
	position relative
	margin 15px 0 15px 23px
	padding 16px 15px 16px 62px
	background #f2f2f2
	.block__title
		font-size 1.1em
		font-family: 'Yanone Kaffeesatz', sans-serif;
	.view-shopping-cart
		cursor pointer
		font-size 0.9em
		.icono-cart
			position absolute
			left: 8px;
			top: 15px;
			background: #88c7c5;
			font-size: 25px;
			color: #fff;
			padding: 10px;
			border-radius: 40px;
			line-height: 20px;
		.view-empty
			p
				color #999
				display inline-block
				margin 0
			.line-item-total-label
				display none
			.line-item-summary
				display inline-block
				margin 0
				ul.links
					position absolute
					left 85px
					bottom -20px
					a
						color #fff
						background rojito
						padding 2px 15px
						border-radius 15px
						&:hover
							background-color plomo_oscu
							text-decoration none
header
	.header__logo
		width 250px;
	.header__site-name
		font-size 0px
	.header__region
		.block
			display inline-block
			margin 0
	.header-main
		padding 10px 0
	.header-top
		padding 10px
		margin-bottom 1px
#inicio
	.pane-demo-content-slideshow
		ul
			padding 0
			margin 0
#main
	padding-top 4em
	#inicio
		padding 10px 0
#navigation
	#main-menu
		li
			a
				font-family: 'Yanone Kaffeesatz', sans-serif;
				text-transform uppercase;				
//fonts
h1,h2,h3,h4,h5
	font-family: 'Yanone Kaffeesatz', sans-serif;
	text-transform uppercase;
